<preference-headers
        xmlns:android="http://schemas.android.com/apk/res/android">

    <header android:fragment="com.example.wundergarten.SettingsActivity$NetworkPreferenceFragment"
            android:icon="@drawable/garden_snail"
            android:title="Network connection settings"
            android:summary="Synchronization preferences." />

    <header android:fragment="com.example.wundergarten.SettingsActivity$ContentPreferenceFragment"
            android:icon="@drawable/garden_plant"
            android:title="Content settings"
            android:summary="Preferences on how to display the content.">
        <!-- Arbitrary key/value pairs can be included with a header as
             arguments to its fragment. -->
        <extra android:name="someKey" android:value="someHeaderValue" />
    </header>

</preference-headers>